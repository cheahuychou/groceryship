{{!-- TODO: input validation for each input --}}
<tr class='item' id='item-{{n}}' data-num='{{n}}'>
  <td><input id='item-name-{{n}}' type='text' name='item-name' class="form-control" required autofocus/></td>
  {{!-- TODO: fix sizing for input boxes that for numbers because they don't need to be that long --}}
  <td><input id='item-qty-{{n}}' type='text' name='item-qty' min='1' value='1' class="form-control" required/></td>
  <td>
  <div class="input-group">
      <span class="input-group-addon">$</span>
      <input id='item-price-estimate-{{n}}' type="text" name='item-price-estimate' class="form-control" required>
    </div>
  </td>
  <td>
    {{!-- TODO: Fix size --}}
    <select multiple id='item-stores-{{n}}' name='item-stores' class="form-control">
      <option>Star Market</option>
      <option>HMart</option>
      <option>Trader Joe's</option>
      <option>Whole Foods</option>
    </select>
  </td>
  {{!-- TODO: set default item due to today's date. also set it as min --}}
  <td><input id='item-due-{{n}}' type='datetime-local' name='item-due' class="form-control datetimepicker" onfocus="setMinDateTime()" required/></td>
  <td>
    {{!-- TODO: Fix size --}}
    <select id='item-pickup-location-{{n}}' name='item-pickup' class="form-control">
      <option>Baker</option>
      <option>Burton Conner</option>
      <option>East Campus</option>
      <option>MacGregor</option>
      <option>Maseeh</option>
      <option>McCormick</option>
      <option>New House</option>
      <option>Next House</option>
      <option>Random</option>
      <option>Senior</option>
      <option>Simmons</option>
      <option>Lobby 7</option>
      <option>Lobby 10</option>
      <option>Stata</option>
    </select>
  </td>
  <td>
    <div class="input-group">
      <span class="input-group-addon">$</span>
      <input id='item-tip-{{n}}' type="text" name='item-tip' class="form-control" required>
    </div>
  </td>
  <td><input id='item-description-{{n}}' type='text' name='item-description' class="form-control"/></td>
  {{!-- delete item when this button is clicked --}}
  {{!-- TODO: decide how to handle n when an item is deleted --}}
  <td><button id='item-remove-{{n}}' type="button" class="close item-remove" hidden>&times;</button></td>
</tr>
