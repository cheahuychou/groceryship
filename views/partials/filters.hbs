<div class="row">
  <strong class="col-sm-1">Filter by:</strong>
  <div class="col-sm-2">Store&nbsp;
    <select multiple id='filter-stores' name='filter-stores' class="selectpicker" data-none-selected-text="Any store" data-width="100%">
      <option>Star Market</option>
      <option>HMart</option>
      <option>Trader Joe's</option>
      <option>Whole Foods</option>
    </select>
  </div>
  <div class="col-sm-2">Pickup Location&nbsp;
    <select multiple id='filter-pickup-location' name='filter-pickup' class="selectpicker" data-none-selected-text="Any location" data-width="100%">
      <option>Baker</option>
      <option>Burton Conner</option>
      <option>East Campus</option>
      <option>MacGregor</option>
      <option>Maseeh</option>
      <option>McCormick</option>
      <option>New House</option>
      <option>Next House</option>
      <option>Random</option>
      <option>Senior</option>
      <option>Simmons</option>
      <option>Lobby 7</option>
      <option>Lobby 10</option>
      <option>Stata</option>
    </select>
  </div>
  <strong class="col-sm-1 col-sm-offset-2">Sort by:</strong>
  <div class="col-sm-2">
    <select id='sort-by' class="form-control">
      <option value='tips'>Tip</option>
      <option value='deadline'>Due date</option>
    </select>
    <form id="sort-direction">
      <div class="radio">
        <label class="radio"><input type="radio" name="sort" value="1">Sort increasing</label>
      </div>
      <div class="radio">
        <label class="radio"><input type="radio" name="sort" value="-1">Sort decreasing</label>
      </div>
    </form>
  </div>
  <div class="col-sm-2">
    <button id='filter-sort' class='filter-sort btn btn-primary'>Refine search</button>
  </div>
</div>