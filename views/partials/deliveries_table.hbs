<div id="deliveries-table">
  <table class="table table-hover">
    <thead>
      <tr>
        {{!-- TODO: when checkbox is selected, all checkboxes should get selected --}}
        <th><input type='checkbox'></th>
        {{> item_headings}}
        <th>Requester</th>
        <th>Pickup Time</th>
      </tr>
    </thead>
    <tbody>
      {{#each deliveryItems}}
      <tr class='delivery-item-row' data-id='{{_id}}'>
        {{!-- TODO: checkbox shouldn't appear if deliver now has been done on item --}}
        <td><input type='checkbox'></td>
        {{> item_row this}}
        {{!-- TODO: pickupTime should be N/A if deliver now hasn't been done on item--}}
        <td class='requester'>{{#if requester}}{{requester.username}}{{else}}N/A{{/if}}</td>
        <td>{{#if pickupTime}}{{pickupTime}}{{else}}N/A{{/if}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{!-- TODO: button should be disabled if there are no items / no items selected --}}
  {{!-- TODO: button click handler --}}
  <button id='deliver-items' class='btn btn-primary' data-toggle="modal" data-target='#deliver-now-modal' style='float: right'>Deliver Now</button>
  {{> deliver_now}}
</div>